/* Typography enhancements */
/* Base font size and line height */
.markdown {
  font-size: var(--ifm-font-size-base);
  line-height: var(--ifm-line-height-base);
  color: var(--rb-text-body); /* High-contrast body text */
}

/* Heading hierarchy styles - H1 purple for branding, H2-H6 high-contrast */
.markdown h1 {
  font-size: 2.5em;
  line-height: var(--ifm-heading-line-height);
  margin-top: 1.5em;
  margin-bottom: 0.8em;
  font-weight: 700;
  color: var(--ifm-color-primary); /* Keep purple for H1 branding - passes WCAG AA for large text */
  position: relative;
  padding-bottom: 0.5rem;
}

.markdown h1::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, var(--ifm-color-purple-primary), transparent);
}

.markdown h2 {
  font-size: 2em;
  line-height: var(--ifm-heading-line-height);
  margin-top: 1.8em;
