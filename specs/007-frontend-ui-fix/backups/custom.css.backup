    min-width: 100%;
  }

  /* Mobile-friendly navigation */
  .navbar {
    background: linear-gradient(135deg, var(--ifm-color-purple-gradient-start) 0%, var(--ifm-color-purple-gradient-end) 100%);
    padding: 0.5rem 1rem;
  }
}

@media (max-width: 576px) {
  .navbar__item {
    display: none;
  }

  .navbar__logo {
    margin-right: 0.5rem;
  }

  .main-wrapper .container {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Mobile-friendly typography */
  :root {
    --ifm-font-size-base: 16px;
  }

  .markdown {
    font-size: var(--ifm-font-size-base);
  }

  .markdown > * {
    max-width: 100%;
  }

  /* Mobile navigation adjustments */
  .navbar__items--right > :last-child {
    display: block !important; /* Show GitHub link on mobile */
  }

  /* Enhanced mobile sidebar navigation with purple theme */
  .navbar-sidebar {
    background: linear-gradient(135deg, var(--ifm-color-purple-gradient-start) 0%, var(--ifm-color-purple-gradient-end) 100%);
