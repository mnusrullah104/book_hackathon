  .markdown h1 {
    font-size: 2em;
  }

  .markdown h2 {
    font-size: 1.7em;
  }

  .markdown h3 {
    font-size: 1.5em;
  }

  /* Adjust sidebar for mobile */
  .theme-doc-sidebar-container {
